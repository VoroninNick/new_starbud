.catalog-page
  .catalog-page-head
    .row
      .columns
        = render partial: "partials/dashboard/promotions_banner"

    = render "catalog/catalog_main_menu"

  .catalog-page-body

    = form_for_filterrific @filterrific, html: {class: 'catalog-filters-form'} do |f|
      .columns
        = f.select(:sorted_by, @filterrific.select_options[:sorted_by])

      .large-3.columns
        .catalog-filters-wrap
          #selected-filters
            = render partial: "catalog/selected_filters/doors/filter_list"

          #control-filters-list
            = render partial: "catalog/filter_list/doors/filter_list", locals: { f: f }

      .large-9.columns
        #doors-list.product-list
          - if @products.any?
            - @products.each do |product|
              = render partial: "partials/dashboard/product/floor/product_card", locals: {product: product}
          /= render partial: "catalog/doors_list", locals: { products: @products }